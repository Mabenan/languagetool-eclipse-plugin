<?xml version="1.0" encoding="UTF-8"?>
<feature
      id="com.vogella.eclipse.languagetool.feature"
      label="Eclipse Spellchecker based on Language Tool"
      version="1.0.0.qualifier"
      provider-name="vogella GmbH">

   <description url="https://languagetool.org/">
      Provides functionality to the Eclipse IDE to use the free Open Source Language Tool spell and grammer checking engine. You find the  official website of Language Tool at https://languagetool.org/
   </description>

   <copyright url="https://www.eclipse.org/legal/epl-v10.html">
      Eclipse Public License

2015 vogella GmbH
   </copyright>

   <license url="https://www.eclipse.org/legal/epl-v10.html">
      Eclipse Public License
   </license>

   <requires>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.ui.workbench.texteditor"/>
      <import plugin="org.eclipse.jface.text" version="3.8.101" match="greaterOrEqual"/>
      <import plugin="org.junit" version="4.11.0" match="greaterOrEqual"/>
      <import plugin="org.hamcrest.core" version="1.3.0" match="greaterOrEqual"/>
   </requires>

   <plugin
         id="com.vogella.eclipse.languagetool.spellchecker"
         download-size="0"
         install-size="0"
         version="0.0.0"
         unpack="false"/>

</feature>
